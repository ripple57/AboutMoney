<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_idcardFrag_head"
        android:layout_width="0dp"
        android:layout_height="156dp"
        android:scaleType="fitXY"
        android:src="@mipmap/test_head"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <com.qmuiteam.qmui.widget.QMUIObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_idcardFrag_head"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintVertical_weight="1">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="请拍摄并上传您的身份证照片"
                app:layout_constraintEnd_toStartOf="@+id/iv_idcardFrag_idcard_front"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <ImageView
                android:id="@+id/iv_idcardFrag_idcard_front"
                android:layout_width="126dp"
                android:layout_height="129dp"
                app:layout_constraintEnd_toStartOf="@+id/iv_idcardFrag_idcard_back"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv1"
                tools:srcCompat="@tools:sample/avatars[0]"/>

            <ImageView
                android:id="@+id/iv_idcardFrag_idcard_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iv_idcardFrag_idcard_front"
                app:layout_constraintTop_toTopOf="@+id/iv_idcardFrag_idcard_front"
                tools:srcCompat="@tools:sample/avatars[0]"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_notice_blue"
                android:text="注意事项"
                android:textColor="@color/text_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_idcardFrag_idcard_front"/>


            <ImageView
                android:id="@+id/iv1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@+id/iv2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView6"

                tools:srcCompat="@tools:sample/avatars[0]"/>

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintEnd_toStartOf="@+id/iv3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iv1"
                app:layout_constraintTop_toTopOf="@+id/iv1"
                tools:srcCompat="@tools:sample/avatars[0]"/>

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iv3"
                app:layout_constraintTop_toTopOf="@+id/iv1"
                tools:srcCompat="@tools:sample/avatars[0]"/>

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:layout_constraintEnd_toStartOf="@+id/iv4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/iv2"
                app:layout_constraintTop_toTopOf="@+id/iv1"
                tools:srcCompat="@tools:sample/avatars[0]"/>

            <View
                android:id="@+id/divider_line"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="8dp"
                android:background="@color/bg_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv1"/>

            <LinearLayout
                android:id="@+id/ll_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:layout_constraintTop_toBottomOf="@id/divider_line">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/ic_must_red"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="真实姓名"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/et_idcardFrag_idcard"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rec_stroke_bord"
                    android:ellipsize="start"
                    android:hint="请输入您的真实姓名"
                    android:maxLength="20"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="15dp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_idcard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:layout_constraintTop_toBottomOf="@id/ll_name">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:src="@mipmap/ic_must_red"/>

                <TextView
                    android:id="@+id/tv12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="身份证号"
                    android:textSize="20dp"/>

                <EditText
                    android:id="@+id/et_idcardFrag_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rec_stroke_bord"
                    android:digits="0123456789xX"
                    android:hint="请输入您的身份证号"
                    android:maxLength="18"
                    android:padding="5dp"
                    android:singleLine="true"
                    android:textSize="15dp"/>


            </LinearLayout>

            <Button
                android:id="@+id/btn_idcardFrag_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:text="下一步"
                android:textColor="@color/white"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_idcard"/>
        </android.support.constraint.ConstraintLayout>
    </com.qmuiteam.qmui.widget.QMUIObservableScrollView>


</android.support.constraint.ConstraintLayout>