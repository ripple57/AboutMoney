<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhaoshuang.weixinrecorded"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true" >
        <activity android:name="com.zhaoshuang.weixinrecorded.RecordedActivity" />
        <activity
            android:name="com.zhaoshuang.weixinrecorded.EditVideoActivity"
            android:windowSoftInputMode="adjustResize|adjustPan" />
        <activity android:name="com.zhaoshuang.weixinrecorded.CutSizeActivity" />
        <activity android:name="com.zhaoshuang.weixinrecorded.CutTimeActivity" />
    </application>

</manifest>